{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./lib",
    "skipLibCheck": true
  },
  "include": ["src", "index.ts", "public_api.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
